cat > .gitignore << 'EOF'
# Python
__pycache__/
*.py[cod]
*.so

# Virtual environments
.venv/
venv/

# Jupyter
.ipynb_checkpoints/
*.ipynb_checkpoints/

# Editors/OS
.DS_Store
.vscode/
.idea/

# Data and large files (adjust as needed)
data/
*.root

# Logs/outputs
*.log
